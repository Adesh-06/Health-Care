<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context=".DoctorDetailsActivity"
    android:orientation="vertical">



  <TextView
      android:id="@+id/textViewDDName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="24*7 Health Care"
      android:textColor="#E02AFF"
      android:textSize="35sp"
      android:textStyle="bold"
      android:layout_marginTop="18dp"
      android:layout_marginLeft="50dp"
      android:layout_marginBottom="18dp" />

  <TextView
      android:id="@+id/textViewDDTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Deliver Loactaion:Pune"
      android:textColor="#fff"
      android:textSize="20sp"
      android:textStyle="bold"
      android:layout_marginBottom="15dp"
      android:layout_marginLeft="125dp"
      />

  <TextView
      android:id="@+id/textViewDDTitle1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Lab Test and Packages"
      android:textColor="#AC9B08"
      android:textSize="20sp"
      android:textStyle="bold"
      android:layout_marginBottom="15dp"
      android:layout_marginLeft="125dp"
      />

  <ListView
      android:id="@+id/DDLstvw"
      android:layout_width="350dp"
      android:layout_height="460dp"
      android:layout_margin="10dp"
      android:layout_marginLeft="15dp"
      android:layout_marginTop="25dp"
      app:layout_constraintTop_toBottomOf="@+id/textViewDDTitle" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/DDBtnCart"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:text="Go to Cart"
      android:background="#411480"
      android:textColor="#fff"
      android:layout_marginRight="150dp"
      android:layout_marginLeft="12dp"
      android:layout_marginTop="10dp"/>

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/DDBtnBack"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Back"
      android:background="#411480"
      android:textColor="#fff"
      android:layout_marginTop="10dp"/>


</LinearLayout>

</LinearLayout>