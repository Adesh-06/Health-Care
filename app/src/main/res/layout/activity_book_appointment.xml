<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/BAImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/BAtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24*7 Health Care"
        android:textColor="#E02AFF"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="55dp" />

    <androidx.cardview.widget.CardView
        android:layout_below="@+id/BAtxt"
        android:id="@+id/RegCrdVw"
        android:layout_width="400dp"
        android:layout_height="550dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="26dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:elevation="5dp"
        app:cardCornerRadius="16dp"
        android:padding="25dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:id="@+id/BATitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Appointment"
                android:textColor="#E6DFDF"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/BAName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/input_bg"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="5dp"
                android:hint=" Full name "
                android:inputType="text"
                android:padding="15dp"
                android:textColorHint="#F4F3F3" />

            <EditText
                android:id="@+id/BAAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/input_bg"
                android:drawableLeft="@drawable/ic_baseline_security_24"
                android:drawablePadding="5dp"
                android:hint="Address"
                android:inputType="text"
                android:padding="15dp"
                android:textColorHint="#F4F3F3" />

            <EditText
                android:id="@+id/BACon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_bg"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="5dp"
                android:hint=" Contact Number "
                android:inputType="text"
                android:padding="15dp"
                android:textColorHint="#F4F3F3" />

            <EditText
                android:id="@+id/BACfee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_bg"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="5dp"
                android:hint=" Consultant Fees "
                android:inputType="text"
                android:padding="15dp"
                android:textColorHint="#F4F3F3" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="12dp"
                   android:layout_margin="3dp">

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
                <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:layout_marginLeft="18dp"
                android:text="Select Date"
                android:textColor="#fff" />

            <Button
                android:id="@+id/BAbtnDate"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27/10/2024" />

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:text="Select Time"
                android:layout_marginLeft="18dp"

                android:textColor="#fff" />

            <Button
                android:id="@+id/BAbtnTime"
                android:layout_marginTop="5dp"
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:text="10:20" />

                   </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp">
            <Button
                android:id="@+id/BABtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#3A468A"
                android:text="Book Appointment"
                android:textColor="#fff"
                android:layout_marginBottom="5dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/BABtnBk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:backgroundTint="#3A468A"
                android:text="Back "
                android:textColor="#fff"
                android:textSize="15sp"
                android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>